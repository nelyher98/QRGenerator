<test_screen>:
    name: 'test'
    id: test
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: lbl1
            text: 'Generador de código QR'
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size: 25
            color: 0,0,0,1
        BoxLayout:
            orientation: 'horizontal'
            height: lbl2.height
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 20
            Label:
                id: lbl2
                text: 'Nombre del archivo .txt:'
                font_size: 15
                color: 0,0,0,1
                size_hint: .5, .3
                pos_hint: {'center_x': .5, 'center_y': .5}
            TextInput:
                id: txtArchivo
                multiline: True
                hint_text: 'Nombre del archivo .txt'
                cursor_color: 0,0,0,1
                font_size: 15
                size_hint: 1, .3
                selection_color: 0.5, 0.5, 0.5, 1.0
                pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                id: btnCargar
                text: "Cargar archivo"
                width: 30
                height: 5
                color: 1,1,1,1
                background_color: 0,0,0,1
                size_hint: .25, .18
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    root.leerTXT()
        Label:
            id: lblTxt
            text: 'Txt: '
            font_size: 15
            color: 0,0,0,1
            valign: 'middle'
            halign: 'left'
            size_hint: (None, None)
            size: self.texture_size
            text_size: root.width, None 
        Label:
            id: lblHASH
            text: 'HASH: '
            font_size: 15
            color: 0,0,0,1
            valign: 'middle'
            halign: 'left'
            size_hint: (None, None)
            size: self.texture_size
            text_size: root.width, None
        BoxLayout:
            orientation: 'horizontal'
            heigth: btn1.height
            spacing: 20
            size_hint: .5, .8
            pos_hint: {'center_x': .5, 'center_y': .5}
            Label:
                id: lblFH
                text: 'Función HASH:'
                font_size: 15
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 0,0,0,1
            Button:
                id: btn1
                text: "SHA-256"
                width: 30
                height: 10
                size_hint: .45, .2
                color: 1,1,1,1
                background_color: 0,0,0,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: 
                    test.fhash = 1
                    root.llave()
                    root.crearHASH()
                    root.habilitarQR()
            Button:
                id: btn2
                text: "SHA-384"
                width: 30
                height: 10
                size_hint: .45, .2
                color: 1,1,1,1
                background_color: 0,0,0,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: 
                    test.fhash = 2
                    root.llave()
                    root.crearHASH()
                    root.habilitarQR()
            Button:
                id: btn3
                text: "SHA-512"
                width: 30
                height: 10
                size_hint: .45, .2
                color: 1,1,1,1
                background_color: 0,0,0,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    test.fhash = 3
                    root.llave()
                    root.crearHASH()
                    root.habilitarQR()
        BoxLayout:
            orientation: 'horizontal'
            heigth: btn1.height
            spacing: 20
            size_hint: .5, .7
            pos_hint: {'center_x': .5, 'center_y': .5}
            Label:
                id: lblR
                text: 'Redundancia:'
                font_size: 15
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 0,0,0,1
            Button:
                id: btnB
                text: "Baja"
                width: 30
                height: 10
                size_hint: .45, .2
                color: 1,1,1,1
                background_color: 0,0,0,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    test.redundancia = 1
                    root.llave()
                    root.habilitarQR()
            Button:
                id: btnM
                text: "Media"
                width: 30
                height: 10
                size_hint: .45, .2
                color: 1,1,1,1
                background_color: 0,0,0,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: 
                    test.redundancia = 2
                    root.llave()
                    root.habilitarQR()
            Button:
                id: btnA
                text: "Alta"
                width: 30
                height: 10
                size_hint: .45, .2
                color: 1,1,1,1
                background_color: 0,0,0,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    test.redundancia = 3
                    root.llave()
                    root.habilitarQR()
        BoxLayout:
            orientation: 'horizontal'
            heigth: btnJPG.height
            spacing: 20
            size_hint: .5, .7
            pos_hint: {'center_x': .5, 'center_y': .5}
            Label:
                id: lbl2
                text: 'Formato de descarga:'
                font_size: 15
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: 0,0,0,1
            Button:
                id: btnJPG
                text: "JPG"
                width: 30
                height: 10
                size_hint: .3, .2
                color: 1,1,1,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                background_color: 0,0,0,1
                on_press: 
                    test.formato = 1
                    root.llave()
                    root.habilitarQR()
            Button:
                id: btnPNG
                text: "PNG"
                width: 30
                height: 10
                size_hint: .3, .2
                color: 1,1,1,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                background_color: 0,0,0,1
                on_press:
                    test.formato = 2
                    root.llave()
                    root.habilitarQR()
        Button:
            id: btnQR
            text: "Generar QR"
            width: 30
            height: 10
            color: 1,1,1,1
            background_color: 1,0,0.5,1
            size_hint: .1, .15
            pos_hint: {'center_x': .9, 'center_y': .5}
            disabled: True
            on_press:
                root.crearQR()